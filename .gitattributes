# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf
Cargo.lock text eol=lf

# Frontend source files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.conf text eol=lf
*.config text eol=lf
justfile text eol=lf
Justfile text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude files from export
.gitignore export-ignore
.gitattributes export-ignore
.github export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.icns binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# macOS specific
*.app -diff -merge
